@using Entities.Concrete
@model Manager

@{
    ViewData["Title"] = "GetById";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetById</h1>

@using (Html.BeginForm("Update", "Table", FormMethod.Post))
{

    @Html.TextBoxFor(x => x.Id, new { @class = "form-control", style = "display:none; width:300px;" })

    <label>First Name</label>
    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", @required = "required", @maxlength = "25", style = "width:300px;" })

    <label>Last Name</label>
    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @required = "required", @maxlength = "25", style = "width:300px;" })

    <label>Email</label>
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @type = "email", @required = "required", @maxlength = "25", style = "width:300px;" })

    <label>Phone Number</label>
    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", @required = "required", @maxlength = "11", style = "width:300px;" })
    <br />
    <button class="btn btn-success">Update</button>
}
